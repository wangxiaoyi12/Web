                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red"></span>地址：</label>
                            <div class="col-md-4">
                                <input type="text" name="BankAddress" value="@Model.BankAddress" class="form-control" errormsg="请填写开户行地址" >
