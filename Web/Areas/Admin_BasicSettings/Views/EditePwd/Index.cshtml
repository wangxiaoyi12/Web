@{
    Layout = null;
}
@using (Ajax.BeginForm("Save", null, new AjaxOptions()
{
    HttpMethod = "Post",
    OnBegin = "SubAjax.Loading",
    OnComplete = "SubAjax.Complate",
    OnFailure = "SubAjax.Failure",
    OnSuccess = "SubAjax.Success"
}, new { @class = "form-horizontal", @role = "form", @id = "commentForm" }))
{

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">修改密码</h4>
    </div>
    <div class="modal-body">
        <div class="form-body">
            <div class="form-group">
                <label class="col-md-3 control-label"><span style="color:red">*</span>旧密码：</label>
                <div class="col-md-6">
                    <input type="password" name="oldpwd" value="" class="form-control" placeholder="请输入旧密码" datatype="*" nullmsg="">
                </div>
                <span></span>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"><span style="color:red">*</span>新密码：</label>
                <div class="col-md-6">
                    <input type="password" name="newpwd" value="" class="form-control" placeholder="请输入新密码" datatype="*" nullmsg="请设置密码！">
                </div>
                <span></span>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"><span style="color:red">*</span>确认新密码：</label>
                <div class="col-md-6">
                    <input type="password" name="confirmpwd"  recheck="newpwd" value="" class="form-control" placeholder="请再次输入新密码" datatype="*" nullmsg="再次输入密码！" errormsg="密码不一致！">
                </div>
                <span></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="col-md-12">
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" id="SubSave" class="btn green"><i class="fa fa-floppy-o"></i><span>保 存</span></button>
                        <button type="button" data-dismiss="modal" class="btn default"><i class="fa fa-times"></i>关 闭</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script>
        $(document).ready(function () {           
            $(".form-horizontal").Validform({
                tiptype: 2
            });
        });
</script>