    <script>
        $(function () {
            //注册绑定
            $('#registerBtn').click(function () {
                var form = $(this).parents('form');
                //验证
                //var UserName = form.find('#UserName');
                //var username = $.trim(UserName.val());
                //if (username.length <= 3) {
                //    alert('用户名，必须大于3位');
                //    UserName.focus();
                //    return;
                //}
                var Pwd = form.find("#Pwd");
                var pwd = $.trim(Pwd.val());
                var Pwd2 = form.find("#Pwd2");
                if (pwd.length < 4) {
                    alert('密码必须大于4位');
                    Pwd.focus();
                    return;
                } else if (pwd != Pwd2.val()) {
                    alert('两次输入密码不一致');
                    Pwd.focus();
                    return;
                }
                var Email = form.find('#Email');
                var email = Email.val();
                if (email.length <= 0) {
                    alert('请输入邮箱');
                    Email.focus();
                    return;
                }

                //验证码
                var ValidateCode = form.find('#ValidateCode');
                var validatecode = ValidateCode.val();
                if (validatecode.length <= 0) {
                    alert('请输入验证码');
                    ValidateCode.focus();
                    return;
                }
                //提交
                $.post('@Url.Action("AddUser")', {
                    username: username, pwd: pwd, email: email, validatecode: validatecode
                }, function (data) {
                    if (data.status == 1) {
                        alert('注册成功');
                        setTimeout(function () {
                            location.href = '@Url_Shop.GetLogin()';
                        }, 1000);
                    } else {
                        alert(data.msg);
                    }
                });
                return false;
            });

            //更换验证码
            $('#validateBtn').click(function () {
                var img = $(this).prev();
                var url = '/ajax/ValidateCode_Above?num=' + Math.random();
                img.attr('src', url);
            });
        });
    </script>
</head>
