@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/SysManage/Desk/Index">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">个人信息</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a  href="Index"><span>修改密码</span></a>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="font-green-sharp fa fa-user"></i>
                    <span class="caption-subject font-green-sharp bold uppercase"><span>修改密码</span></span>
                </div>
            </div>
            <div class="portlet-body">
                @using (Ajax.BeginForm("Save", null, new AjaxOptions()
                {
                    HttpMethod = "Post",
                    OnBegin = "SubAjax.Loading",
                    OnComplete = "SubAjax.Complate",
                    OnFailure = "SubAjax.Failure",
                    OnSuccess = "SubAjax.Success"
                }, new { @class = "form-horizontal", @role = "form", @id = "commentForm" }))
                {
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>会员编号：</label>
                            <div class="col-md-4">                                
                                <label class="control-label">@ViewBag.Code</label>
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>密码类型：</label>
                            <div class="col-md-4">
                                <select name="PwdType" class="form-control select2" datatype="*" nullmsg="" errormsg="请选择密码类型">
                                    <option value="登录密码">登录密码</option>
                                    <option value="支付密码">支付密码</option>                                    
                                </select>
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>旧密码：</label>
                            <div class="col-md-4">
                                <input type="password" name="OldPwd" class="form-control"  datatype="*" nullmsg="请输入旧密码" errormsg="请输入旧密码">
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>新密码：</label>
                            <div class="col-md-4">
                                <input type="password" name="Password" id="Password" class="form-control" datatype="*" nullmsg="请输入新密码" errormsg="请输入新密码">
                            </div>
                            <span></span>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>新密码确认：</label>
                            <div class="col-md-4">
                                <input type="password" name="Password2" recheck="Password" class="form-control" datatype="*" nullmsg="请输入新密码确认" errormsg="两次新密码不一致">
                            </div>
                            <span></span>
                        </div>                        
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" id="SubSave" class="btn green"><i class="fa fa-check"></i><span>保 存</span></button>
                                    <button type="button" class="btn default" onclick="window.history.back()"><i class="fa fa-mail-reply"></i>返回</button>
                                </div>
                            </div>
                        </div>
                    </div>
                                        }
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->
