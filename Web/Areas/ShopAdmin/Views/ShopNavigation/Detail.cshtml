@model DataBase.ShopNavigation
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/SysManage/Home/Index">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#"><span>商城管理</span></a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#"><span>导航</span></a>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="font-green-sharp fa fa-user"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title<span>导航</span></span>
                </div>
            </div>
            <div class="portlet-body">
                @using (Ajax.BeginForm("Save", null, new AjaxOptions()
                {
                    HttpMethod = "Post",
                    OnBegin = "SubAjax.Loading",
                    OnComplete = "SubAjax.Complate",
                    OnFailure = "SubAjax.Failure",
                    OnSuccess = "SubAjax.Success"
                }, new { @class = "form-horizontal", @role = "form", @id = "commentForm" }))
                {
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>导航：</label>
                            <div class="col-md-4">
                                <input type="hidden" name="ID" value="@Model.ID" />
                                <input type="text" name="Name" value="@Model.Name" class="form-control" nullmsg="请输入导航" datatype="*1-20" errormsg="导航不正确">
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red">*</span>导航类型：</label>
                            <div class="col-md-4">
                                <div class="mt-radio-inline">
                                    <label class="mt-radio">
                                        <input type="radio" name="Type" value="0" @(Model.Type == 0 ? "checked='checked'" : "")> 主导航
                                        <span></span>
                                    </label>
                                    <label class="mt-radio">
                                        <input type="radio" name="Type" value="1" @(Model.Type == 1 ? "checked='checked'" : "")> 副导航
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red"></span>链接地址：</label>
                            <div class="col-md-4">
                                <input type="text" name="URL" value="@Model.URL" class="form-control" nullmsg="请输入链接地址" datatype="*" errormsg="链接地址不正确">
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red"></span>打开方式：</label>
                            <div class="col-md-4">
                                <div class="mt-radio-inline">
                                    <label class="mt-radio">
                                        <input type="radio" name="Target" value="_blank" @(Model.Target == "_blank" ? "checked='checked'" : "")> 新页面
                                        <span></span>
                                    </label>
                                    <label class="mt-radio">
                                        <input type="radio" name="Target" value="_self" @(Model.Target == "_self" ? "checked='checked'" : "")> 当前页面
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red"></span>是否启用：</label>
                            <div class="col-md-4">
                                <input type="checkbox" name="IsEnable" value="True" @(Model.IsEnable != false ? "checked=\"checked\")" : "")>
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red"></span>顺序：</label>
                            <div class="col-md-4">
                                <input type="text" name="Sort" value="@Model.Sort" class="form-control" nullmsg="请输入顺序" datatype="n0-20" errormsg="顺序不正确">
                            </div>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"><span style="color:red"></span>导航简介：</label>
                            <div class="col-md-4">
                                <textarea name="Description" rows="8" class="form-control" nullmsg="请输入导航简介">@Model.Description</textarea>
                            </div>
                            <span></span>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" id="SubSave" class="btn green"><i class="fa fa-check"></i><span>保 存</span></button>
                                    <button type="button" class="btn default" onclick="window.history.back()"><i class="fa fa-mail-reply"></i>返回</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->
