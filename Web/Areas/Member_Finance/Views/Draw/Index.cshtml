
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var Path = "/Member_Finance/Draw/";
    var title = "提现申请";
    var timeFlag = "申请时间";
}

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/SysManage/Desk/Index">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#"><span>财务管理</span></a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="/Member_Finance/Draw/Index"><span>提现申请</span></a>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>@(title)列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="reload"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <div class="table-toolbar col-md-3">
                        <div class="btn-group">
                            <a id="add" href="@(Path)Detail" class="btn green">
                                <i class="fa fa-plus"></i> 新增
                            </a>
                        </div>
                    </div>
                    <form class="form form-horizontal form-inline">
                        <fieldset>
                            <div class="control-group">
                                <div class="controls">                                     
                                    <div class="text-right">
                                        <div class="input-group col-md-6">
                                            <input type="text" value="" id="start" placeholder="@(timeFlag)起" class="form-control ">
                                            <span class="input-group-addon"> to </span>
                                            <input type="text" value="" id="end" placeholder="@(timeFlag)至" class="form-control ">
                                        </div>
                                        <div class="input-group col-md-3">
                                            <input type="text" class="form-control" placeholder="搜索关键字" id="keyword" />
                                            <span class="input-group-btn">
                                                <a class="btn btn-default" href="javascript:searchList();">
                                                    <span class="glyphicon glyphicon-search"></span>
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                    
                </div>
                <div class="table-responsive">
                    <table id="datatable" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th style="width:3%"><input type="checkbox" id='checkAll'></th>
                                <th>会员编号</th>
                                <th>姓名</th>
                                <th>提现金额</th>
                                <th>手续费</th>
                                <th>实发金额</th>
                                <th>开户银行</th>
                                <th>帐号</th>
                                <th>户名</th>
                                <th>开户地址</th>
                                <th>发放状态</th>
                                <th>申请时间</th>
                                <th>备注</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
</div>

@section scripts {
    <script type="text/javascript">
        var oTable;
        var idField = "DrawId";
        var path = "@Path";
        var dataSource = path + "getDataSource";
        var searchData = function (e) {
            return {
                startTime: $("#start").val(),
                end: $("#end").val(),
                key: $("#keyword").val(),
                start: e.start,
                length: e.length,
                draw: e.draw
            }
        };
        var columns = [//绑定数据
            {
                data: idField,
                createdCell: function (nTd, sData, oData, iRow, iCol) {
                    $(nTd).html("<input type='checkbox' name='checkList' value='" + sData + "'>");
                }
            },
            { data: 'MemberCode' },
            { data: 'NickName' },
            { data: 'DrawAmount' },
            { data: 'Poundage' },
            { data: 'Amount' },
            { data: 'OpenBank' },
            { data: 'BankCode' },
            { data: 'BankAccount' },
            { data: 'BankAddress' },
            {
                data: 'DrawState',
                createdCell: function (nTd, sData, oData, iRow, iCol) {
                    if (oData.DrawState == "已发放") {
                        $(nTd).html("<span class=\"label label-sm label-warning\"> " + oData.DrawState + " </span>")
                    } else {
                        $(nTd).html("<span class=\"label label-sm label-danger\"> " + oData.DrawState + " </span>")
                    }
                }
            },
            { data: 'CreateTime' },
            { data: 'Summary' }
        ];
        function searchList() {
            oTable.ajax.reload(null, false);
        }
        $(function () {
            $('#start').datetimepicker({
                language: 'zh-CN',
                format: 'yyyy-mm-dd',
                autoclose: 1,
                minView: 2
            }).on('changeDate', function (ev) {
                var start = $('#start').val();
                $('#end').datetimepicker('setStartDate', start);
                $('#start').datetimepicker('hide');
            });
            $('#end').datetimepicker({
                language: 'zh-CN',
                format: 'yyyy-mm-dd',
                autoclose: 1,
                minView: 2
            }).on('changeDate', function (ev) {
                var end = $('#end').val();
                $('#start').datetimepicker('setEndDate', end);
                $('#end').datetimepicker('hide');
            });
        });
    </script>
    <script src="~/assets/scripts/myListPage.js"></script>
}