@using DataBase
@model List<MemberCashRecord>

@*@if (Model.Count <= 0)
{
    <p class="text-center gray">暂时没有数据了?</p>
}
else*@
@{
    foreach (var item in Model)
    {
        <ul class="list-group">
            <li class="list-group-item ">
                <div class="pull-left text-primary">
                    @item.OperateTypeName
                </div>
                <div class="pull-right">
                    <small>
                        <span class="glyphicon glyphicon-time"></span>
                        @item.CreatTime.ToString("yyyy-MM-dd HH:mm")
                    </small>
                </div>
                <div class="clearfix"></div>
            </li>
            <li class="list-group-item hproduct clearfix">
                <p class="p-pic">
                    <em class="price">@item.CashAmount</em>
                </p>
                <div class="p-info">
                    <p class="p-title">@item.Remark</p>
                </div>
                <div class="clearfix"></div>
            </li>
        </ul>
    }

    if (ViewBag.skipCount < ViewBag.recordCount)
    {
        <div class="btn btn-primary btn-block viewMore" data-skip="@ViewBag.skipCount">加载更多>></div>
    }
    else
    {
        <p class="noData">暂时没有数据了?</p>
    }

}




