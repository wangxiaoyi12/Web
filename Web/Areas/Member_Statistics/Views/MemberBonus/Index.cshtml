
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var Path = "/Member_Statistics/MemberBonus/";
    var title = "收益明细";
    var timeFlag = "时间";
}

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/SysManage/Desk/Index">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#"><span>收益业绩</span></a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="/Member_Statistics/MemberBonus/Index"><span>实时收益</span></a>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE CONTENT -->
<div class="row">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>@(title)列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="reload"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <form class="form form-horizontal form-inline">
                        <fieldset>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="col-md-3">
                                    </div>                                     
                                    <div class="col-md-9 text-right">
                                        <div class="input-group col-md-6">
                                            <input type="text" value="" id="start" placeholder="@(timeFlag)起" class="form-control ">
                                            <span class="input-group-addon"> to </span>
                                            <input type="text" value="" id="end" placeholder="@(timeFlag)至" class="form-control ">
                                        </div>
                                        <div class="input-group col-md-3">
                                            <input type="text" class="form-control" placeholder="搜索关键字" id="keyword" />
                                            <span class="input-group-btn">
                                                <a class="btn btn-default" href="javascript:searchList();">
                                                    <span class="glyphicon glyphicon-search"></span>
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="datatable" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th style="width:3%"><input type="checkbox" id='checkAll'></th>
                                <th>日期</th>
                                <th>会员编号</th>
                                <th>姓名</th>
                                <th>类型</th>
                                <th>摘要</th>
                                <th>相关会员编号</th>
                                <th>相关会员姓名</th>
                                <th>金额</th>
                                @*<th>购物币</th>*@
                                @*<th>收益</th>*@
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
</div>

@section scripts {
    <script type="text/javascript">
        var isDetail = false;

        var oTable;
        var idField = "FinId";
        var path = "@Path";
        var dataSource = path + "getDataSource";
        var searchData = function (e) {
            return {
                startTime: $("#start").val(),
                end: $("#end").val(),
                key: $("#keyword").val(),
                start: e.start,
                length: e.length,
                draw: e.draw
            }
        };
        var columns = [//绑定数据
            {
                data: idField,
                createdCell: function (nTd, sData, oData, iRow, iCol) {
                    $(nTd).html("<input type='checkbox' name='checkList' value='" + sData + "'>");
                }
            },
            { data: 'CreateTime' },
            { data: 'MemberCode' },
            { data: 'NickName' },
            { data: 'TypeName' },
            { data: 'Comment' },
            { data: 'RefMemberCode' },
            { data: 'RefNickName' },
            //{ data: 'Amount' }
            //{ data: 'Poundage' },
            { data: 'RealAmount' }
        ];
        function searchList() {        
            oTable.ajax.reload(null,false);
        }
        $(function () {
            $('#start').datetimepicker({
                language: 'zh-CN',
                format: 'yyyy-mm-dd',
                autoclose: 1,
                minView: 2
            }).on('changeDate', function (ev) {
                var start = $('#start').val();
                $('#end').datetimepicker('setStartDate', start);
                $('#start').datetimepicker('hide');
            });
            $('#end').datetimepicker({
                language: 'zh-CN',
                format: 'yyyy-mm-dd',
                autoclose: 1,
                minView: 2
            }).on('changeDate', function (ev) {
                var end = $('#end').val();
                $('#start').datetimepicker('setEndDate', end);
                $('#end').datetimepicker('hide');
            });
        });
        $(document).ready(function () {
            oTable = initTable();
        });

        /**
        * 表格初始化
        * returns {*|jQuery}
        */
        function initTable() {
            var table = $("#datatable").DataTable({
                bFilter: false,
                dom: '<f<t>lip>',
                ordering: false,
                serverSide: true,
                language: {
                    url: '/assets/global/plugins/DataTables-1.10.12/zh-CN.json'//汉化
                },
                ajax: {
                    url: dataSource,
                    type: 'post',
                    data: searchData
                },   //异步加载数据
                columnDefs: [
            { "searchable": false, "targets": 0 },//第一列禁用搜索
            { "orderable": false, "targets": 0 }, //第一列禁用排序
                ],
                columns: columns,
                initComplete: function (settings, json) {
                    $("a[name='Restore']").css("visibility", $("#IsRestore").val());
                }
            });
            return table;
        }
    </script>
    
}